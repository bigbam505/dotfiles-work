# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias dotfiles="cd ~/.dotfiles"
alias ðŸ”¥="kill -s KILL"

# Shitty mac fixes
alias fix_dock="killall -Kill Dock"

# git
alias gs="git status"
alias gcm="git commit -m"

# Bundler
alias b="bundle"
alias be="bundle exec"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# Docker
alias dm="docker-machine"
alias ds="docker-swarm"
alias dc="docker-compose" # This overrides an actual unix command but its stupid

# Hogan
alias hoganize="hogan --configDir ~/code/hogan-configs/configs --rootDir ."

# Gatling
alias gatling="~/gatling/bin/gatling.sh"

# Chef
alias critic="foodcritic --epic-fail correctness ."
alias k="kitchen"
alias kc="kitchen converge"
alias kv="kitchen verify"
alias dv="delivery"
alias ce="chef exec"

# stash
alias spr="stash pull-request"

# Rakefile overrides
alias crake="rake -f ~/.rake-files/chef"

# Spotify
alias song="tmux-spotify-info"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
