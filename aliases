# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"
alias dotfiles="cd ~/.dotfiles"

# Shitty mac fixes
alias fix_dock="killall -Kill Dock"

# git
alias gs="git status"
alias gcm="git commit -m"

# Bundler
alias b="bundle"
alias be="bundle exec"

# Tests and Specs
alias t="ruby -I test"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias m="migrate"
alias rk="rake"
alias s="rspec"

# Docker
alias dm="docker-machine"
alias ds="docker-swarm"
alias dc="docker-compose" # This overrides an actual unix command but its stupid

# Hogan
alias hoganize="hogan --configDir ~/code/hogan-configs/configs --rootDir ."

# Chef
alias critic="foodcritic --epic-fail correctness --tags '~solo' --tags '~FC009' ."
alias k="kitchen"
alias kc="kitchen converge"
alias kv="kitchen verify"
alias dv="delivery"

# stash
alias spr="stash pull-request"

# Rakefile overrides
alias crake="rake -f ~/.rake-files/chef"

# Spotify
alias song="tmux-spotify-info"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
