# Notify pushover when a command completes

notify() {
  $@
  rc=$?

  if [ -z "$PUSHOVER_API_KEY" ]; then
    echo "Not notifying, no api key"
    return $rc
  fi

  curl -G -X "POST" -v "https://api.pushover.net/1/messages.json" --data-urlencode "token=$PUSHOVER_API_KEY" --data-urlencode "user=$PUSHOVER_USER_KEY" --data-urlencode "message=Command Finished: $@" > /dev/null 2>&1

  return $rc
}
